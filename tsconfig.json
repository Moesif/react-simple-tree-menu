{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es6", "dom", "es2017"],
    "module": "es6",
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "declarationDir": "dist",
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "typings/*": ["typings/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
